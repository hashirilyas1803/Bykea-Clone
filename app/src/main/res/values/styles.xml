<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OtpBox">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/bykeaText</item>
        <item name="android:background">@drawable/edittext_bg</item>
    </style>
    <style name="OtpBoxStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textColor">@color/bykeaText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:layout_margin">6dp</item>
    </style>
    <style name="BykeaRideOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bykeaText</item>
        <item name="android:background">@drawable/ride_option_bg</item>
        <item name="android:buttonTint">@color/bykeaGreen</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>