<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bykeaSurface"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bykea"
        android:textColor="@color/bykeaGreen"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_bykea_logo"
        android:contentDescription="Keypad icon"
        android:layout_marginBottom="16dp"
        app:tint="@color/bykeaText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your OTP"
        android:textColor="@color/bykeaText"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <EditText
            android:id="@+id/otp1"
            style="@style/OtpBoxStyle"
            android:inputType="number" />

        <EditText
            android:id="@+id/otp2"
            style="@style/OtpBoxStyle"
            android:inputType="number" />

        <EditText
            android:id="@+id/otp3"
            style="@style/OtpBoxStyle"
            android:inputType="number" />

        <EditText
            android:id="@+id/otp4"
            style="@style/OtpBoxStyle"
            android:inputType="number" />
    </LinearLayout>

</LinearLayout>