<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bykeaSurface">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ride History"
        android:textColor="@color/bykeaGreen"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search for booking"
        android:background="@drawable/edittext_bg"
        android:padding="12dp"
        android:textColor="@color/bykeaText"
        android:textColorHint="@color/bykeaTextHint"
        android:layout_marginBottom="12dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Ride History Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="IBA to BoatBasin - 2 hours ago"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:background="@drawable/ic_history_item_bg"
                android:textColor="@color/bykeaText"
                android:textSize="16sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:text="IBA to Clifton - 5 hours ago"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:background="@drawable/ic_history_item_bg"
                android:textColor="@color/bykeaText"
                android:textSize="16sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:text="IBA to NazPlaza - Yesterday"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:background="@drawable/ic_history_item_bg"
                android:textColor="@color/bykeaText"
                android:textSize="16sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:text="St. Patrickâ€™s High School to Clifton - 2 days ago"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:background="@drawable/ic_history_item_bg"
                android:textColor="@color/bykeaText"
                android:textSize="16sp"
                android:layout_marginBottom="6dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>