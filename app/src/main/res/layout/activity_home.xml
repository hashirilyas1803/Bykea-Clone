<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bykeaSurface"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:contentDescription="Menu"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="@color/bykeaGreen" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_bykea"
            android:textColor="@color/bykeaGreen"
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Map placeholder -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:background="@drawable/map_placeholder" />

    <!-- Bottom cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Big Ride card -->
        <LinearLayout
            android:id="@+id/cardRide"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/card_bg"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ride"
                android:textStyle="bold"
                android:textColor="@color/bykeaText"
                android:textSize="26sp"/>
        </LinearLayout>

        <!-- Two small cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cardHelpline"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/card_bg"
                android:gravity="center"
                android:layout_marginRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/helpline"
                    android:textStyle="bold"
                    android:textColor="@color/bykeaText"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardDelivery"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/card_bg"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery"
                    android:textStyle="bold"
                    android:textColor="@color/bykeaText"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>